@model leave_management.Models.CreateLeaveAllocationVM

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Allocation</h1>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
               Leave Types
            </th>
           
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LeaveTypes)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Allocate to Employees", "SetLeave", new { id = item.Id})
            </td>
        
        </tr>
        }
    </tbody>
</table>



